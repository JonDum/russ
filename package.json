{
  "name": "bolt",
  "description": "lightweight vanilla task runner",
  "version": "0.0.0",
  "main": "index.js",
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "config": {
    "SCRIPTS_DEST": "./",
    "SCRIPTS_SRC": "src"
  },
  "scripts": {
    "clean": "rm -rf lib test",
    "test": "mocha -u tdd --reporter spec",
    "build:scripts": "babel src/ -d $npm_package_config_SCRIPTS_DEST",
    "lint:scripts": "eslint $npm_package_config_SCRIPTS_SRC",
    "watch:scripts": "babel src/ --watch -d $npm_package_config_SCRIPTS_DEST",
    "predev": "npm run build:scripts",
    "dev": "npm run watch:scripts",
    "update:packages": "node wipe-dependencies.js && rm -rf node_modules && npm update --save-dev && npm update --save",
    "create:task": "sh createTask.sh"
  },
  "preferGlobal": true,
  "bin": {
    "bolt": "./bin/bolt"
  },
  "engines": {
    "node": ">= 0.8.0"
  },
  "dependencies": {
    "async": "^1.5.2",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "gaze": "^1.0.0",
    "inquirer": "^0.12.0",
    "shelljs": "^0.6.0",
    "winston": "^2.2.0"
  },
  "keywords": [],
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.7.5",
    "babel-eslint": "^6.0.2",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "browser-sync": "^2.12.3",
    "cssnano": "^3.5.2",
    "eslint": "^2.7.0",
    "mocha": "^2.4.5",
    "postcss": "^5.0.19",
    "stylint": "^1.3.8",
    "stylus": "^0.54.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-file": "^2.0.0",
    "vinyl-source-stream": "^1.1.0"
  }
}
