{
  "name": "bolt",
  "version": "0.0.0",
  "description": "setting up a task runner with nothing but node!",
  "scripts": {
    "watch:styles": "node ./tasks/watch -d src/stylus -e styles -n Stylus",
    "watch:scripts": "node ./tasks/watch -d src/coffee -e scripts -n Coffee",
    "watch": "npm run watch:styles -s & npm run watch:scripts -s",
    "build:styles": "node ./tasks/styles",
    "build:scripts": "node ./tasks/scripts"
  },
  "author": "jh3y <jh3y@live.co.uk>",
  "license": "MIT",
  "devDependencies": {
    "async": "^1.5.0",
    "autoprefixer": "^6.0.3",
    "coffee-script": "^1.10.0",
    "commander": "^2.9.0",
    "cssnano": "^3.3.2",
    "glob": "^5.0.15",
    "postcss": "^5.0.10",
    "stylelint": "^2.0.0",
    "stylus": "^0.52.4"
  }
}
